{
    "display_information": {
        "name": "CollegeAI DataAgent",
        "description": "Natural-language data assistant powered by Snowflake Cortex",
        "background_color": "#11567f",
        "long_description": "*CollegeAI DataAgent* brings the power of Snowflake’s Cortex semantic models right into Slack.  \r\nAsk any business question in plain English and get back:\r\n• A natural-language interpretation of your request  \r\n• Fully executed results from your Snowflake data  \r\n• Auto-generated follow-up suggestions"
    },
    "features": {
        "bot_user": {
            "display_name": "CollegeAI DataAgent",
            "always_online": true
        },
        "slash_commands": [
            {
                "command": "/askcortex",
                "description": "Ask Snowflake Cortex Analyst",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "user": [
                "chat:write"
            ],
            "bot": [
                "channels:history",
                "channels:manage",
                "channels:read",
                "chat:write",
                "chat:write.public",
                "chat:write.customize",
                "files:read",
                "files:write",
                "groups:read",
                "groups:write",
                "im:read",
                "im:write",
                "mpim:read",
                "mpim:write",
                "users:read",
                "im:history",
                "app_mentions:read",
                "commands",
                "groups:history",
                "mpim:history"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_mention",
                "message.channels",
                "message.groups",
                "message.im",
                "message.mpim"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}
